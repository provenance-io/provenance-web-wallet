{
  "name": "Provenance Blockchain Wallet",
  "description": "Provenance Blockchain Wallet Browser Extension",
  "author": "Provenance Blockchain Foundation",
  "version": "1.4.0",
  "manifest_version": 3,
  "icons": {
    "16": "16.png",
    "32": "32.png",
    "48": "48.png",
    "128": "128.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "provenance-blockchain-wallet.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "content-script.js"
      ],
      "matches": [
        "file://*/*",
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_start"
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+P",
        "chromeos": "Alt+Shift+P",
        "linux": "Alt+Shift+P",
        "mac": "Alt+Shift+P",
        "windows": "Alt+Shift+P"
      }
    }
  }
}